---
import { Icon } from "astro-icon/components";
import { profileConfig } from "../config";
import { url } from "../utils/url-utils";
import ImageWrapper from "./misc/ImageWrapper.astro";

const config = profileConfig;
---
<div class="card-base rounded-[var(--radius-large)] px-4 md:px-6 py-4 md:py-5 mb-4 onload-animation">
  <div class="flex flex-col md:flex-row items-center gap-4">
    <a
      aria-label="Go to About Page"
      href={url("/about/")}
      class="group relative overflow-hidden rounded-2xl w-24 h-24 md:w-28 md:h-28 active:scale-95"
    >
      <div class="absolute inset-0 transition pointer-events-none group-hover:bg-black/30 group-active:bg-black/50 z-10 flex items-center justify-center">
        <Icon
          name="fa6-regular:address-card"
          class="transition opacity-0 scale-90 group-hover:scale-100 group-hover:opacity-100 text-white text-4xl"
        />
      </div>
      <ImageWrapper
        src={config.avatar || ""}
        alt="Profile Image of the Author"
        class="w-full h-full"
      />
    </a>

    <div class="flex-1 text-center md:text-left">
      <div class="font-bold text-2xl md:text-3xl mb-1 text-black/90 dark:text-white/90 transition">
        {config.name}
      </div>
      <div class="h-1 w-8 bg-[var(--primary)] mx-auto md:mx-0 rounded-full mb-2 transition"></div>
      <div class="text-sm md:text-base text-neutral-500 dark:text-neutral-400 mb-3 transition">
        {config.bio}
      </div>

      <div class="flex flex-wrap items-center justify-center md:justify-start gap-x-4 gap-y-1 text-xs md:text-sm text-neutral-500 dark:text-neutral-400">
        <div>
          浏览量
          <span id="busuanzi_value_site_pv" class="font-semibold mx-1">--</span>
        </div>
        <div class="hidden md:inline">·</div>
        <div>
          访问次数
          <span id="busuanzi_value_site_uv" class="font-semibold mx-1">--</span>
        </div>
      </div>
    </div>
  </div>
</div>
